/**app.wxss**/
/* 默认主题样式变量 - 绿色主题 */
:root {
  /* 主题色 */
  --primary-color: #4CAF50;
  --primary-light: #81C784;
  --primary-dark: #388E3C;
  --accent-color: #FF9800;
  --error-color: #F44336;
  
  /* 文本颜色 */
  --text-primary: #333333;
  --text-secondary: #666666;
  --text-light: #999999;
  
  /* 背景颜色 */
  --background: #F5F5F5;
  --card-background: #FFFFFF;
  --border-color: #EEEEEE;
  
  /* 阴影效果 */
  --shadow-light: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  --shadow-medium: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  --shadow-heavy: 0 8rpx 30rpx rgba(0, 0, 0, 0.12);
  
  /* 圆角 */
  --border-radius-small: 10rpx;
  --border-radius-medium: 20rpx;
  --border-radius-large: 30rpx;
  
  /* 间距 */
  --spacing-xs: 10rpx;
  --spacing-sm: 20rpx;
  --spacing-md: 30rpx;
  --spacing-lg: 40rpx;
  --spacing-xl: 50rpx;
  --spacing-xxl: 80rpx;
  
  /* 状态栏 */
  --status-bar-height: 0;
  
  /* 字体大小 - 可调整 */
  --font-size-xs: 22rpx;
  --font-size-sm: 24rpx;
  --font-size-md: 28rpx;
  --font-size-lg: 32rpx;
  --font-size-xl: 36rpx;
  
  /* 过渡动画 */
  --transition: all 0.3s ease;
}

/* 蓝色主题 */
.blue-theme {
  --primary-color: #2196F3;
  --primary-light: #64B5F6;
  --primary-dark: #1976D2;
  --accent-color: #FF4081;
  --background: #E3F2FD;
  --card-background: #FFFFFF;
}

/* 粉色主题 */
.pink-theme {
  --primary-color: #E91E63;
  --primary-light: #F06292;
  --primary-dark: #C2185B;
  --accent-color: #FFD54F;
  --background: #FCE4EC;
  --card-background: #FFFFFF;
}

/* 紫色主题 */
.purple-theme {
  --primary-color: #9C27B0;
  --primary-light: #BA68C8;
  --primary-dark: #7B1FA2;
  --accent-color: #40C4FF;
  --background: #F3E5F5;
  --card-background: #FFFFFF;
}

/* 深色主题 */
.dark-theme {
  --primary-color: #81C784;
  --primary-light: #A5D6A7;
  --primary-dark: #66BB6A;
  --accent-color: #FFB74D;
  --text-primary: #E0E0E0;
  --text-secondary: #BDBDBD;
  --text-light: #9E9E9E;
  --background: #121212;
  --card-background: #1E1E1E;
  --border-color: #333333;
  --shadow-light: 0 2rpx 10rpx rgba(0, 0, 0, 0.3);
  --shadow-medium: 0 4rpx 20rpx rgba(0, 0, 0, 0.4);
  --shadow-heavy: 0 8rpx 30rpx rgba(0, 0, 0, 0.5);
}

/* 全局重置 */
page, view, text, image, button, input, textarea, navigator, swiper, swiper-item {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

/* 页面容器 */
.container {
  min-height: 100vh;
  background-color: var(--background);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
}

/* 页面标题样式 */
.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-primary);
}

.page-subtitle {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 空状态样式 */
.empty {
  text-align: center;
  padding: var(--spacing-xl) var(--spacing-sm);
}

.empty-icon {
  display: block;
  font-size: 80rpx;
  color: #CCCCCC;
  margin-bottom: var(--spacing-sm);
}

.empty-text {
  display: block;
  font-size: 28rpx;
  color: var(--text-light);
  margin-bottom: var(--spacing-xs);
}

.empty-desc {
  display: block;
  font-size: 24rpx;
  color: var(--text-light);
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: var(--spacing-xl) var(--spacing-sm);
}

.loading::after {
  content: '';
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid var(--primary-light);
  border-top-color: var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* 骨架屏样式 */
.skeleton {
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s infinite;
}

@keyframes skeleton-loading {
  0% { background-position: 200% 0; }
  100% { background-position: -200% 0; }
}
