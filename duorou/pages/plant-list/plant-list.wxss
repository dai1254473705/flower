/* pages/plant-list/plant-list.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, var(--background) 0%, var(--background-light, rgba(255,255,255,0.8)) 100%);
  padding-top: var(--status-bar-height);
  position: relative;
  overflow: hidden;
}

.container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: 
    radial-gradient(circle at 20% 80%, rgba(76, 175, 80, 0.15) 0%, transparent 50%),
    radial-gradient(circle at 80% 20%, rgba(255, 152, 0, 0.1) 0%, transparent 50%),
    radial-gradient(circle at 40% 40%, rgba(33, 150, 243, 0.08) 0%, transparent 50%);
  pointer-events: none;
  z-index: 0;
}

/* 页面标题 */
.page-header {
  background: linear-gradient(145deg, var(--card-background) 0%, rgba(255, 255, 255, 0.98) 100%);
  padding: var(--spacing-lg) var(--spacing-md);
  box-shadow: var(--shadow-medium), 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  text-align: center;
  border-radius: 0 0 var(--border-radius-large) var(--border-radius-large);
  margin-bottom: var(--spacing-lg);
  position: relative;
  z-index: 1;
  border-bottom: 2rpx solid var(--primary-light);
  backdrop-filter: blur(10px);
}

.page-title {
  display: block;
  font-size: 42rpx;
  font-weight: 800;
  margin-bottom: var(--spacing-xs);
  letter-spacing: 1rpx;
  background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.plant-count {
  font-size: 26rpx;
  color: var(--primary-color);
  font-weight: 600;
  background: rgba(76, 175, 80, 0.1);
  padding: 4rpx 16rpx;
  border-radius: 16rpx;
  display: inline-block;
  border: 1rpx solid var(--primary-light);
}

/* 植物列表 */
.plants-list {
  padding: var(--spacing-sm);
  max-width: 800rpx;
  margin: 0 auto;
}

.plant-item {
  display: flex;
  align-items: center;
  background: linear-gradient(145deg, var(--card-background) 0%, rgba(255, 255, 255, 0.98) 100%);
  border-radius: var(--border-radius-large);
  padding: var(--spacing-lg);
  margin-bottom: var(--spacing-lg);
  box-shadow: 
    var(--shadow-light),
    0 4rpx 20rpx rgba(76, 175, 80, 0.1),
    0 0 0 1rpx rgba(76, 175, 80, 0.05),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  animation: fadeInUp 0.6s ease-out;
  backdrop-filter: blur(5px);
  border: 1rpx solid var(--border-color);
  z-index: 1;
}

.plant-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, var(--primary-color), var(--accent-color), var(--primary-color));
  background-size: 200% 100%;
  animation: gradientShine 3s linear infinite;
  z-index: 2;
}

@keyframes gradientShine {
  0% { background-position: 200% 0; }
  100% { background-position: -200% 0; }
}

.plant-item::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: radial-gradient(circle, rgba(76, 175, 80, 0.2) 0%, transparent 70%);
  transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  transform: translate(-50%, -50%);
}

.plant-item:active {
  transform: translateY(-6rpx) scale(0.985);
  box-shadow: 
    var(--shadow-heavy),
    0 12rpx 40rpx rgba(76, 175, 80, 0.15),
    0 0 0 2rpx rgba(76, 175, 80, 0.1);
  border-color: var(--primary-light);
  background: linear-gradient(145deg, var(--card-background) 0%, rgba(76, 175, 80, 0.1) 100%);
}

.plant-item:active::after {
  width: 300rpx;
  height: 300rpx;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.plant-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: var(--border-radius-large);
  margin-right: var(--spacing-xl);
  background-color: #f8f8f8;
  box-shadow: 
    var(--shadow-medium),
    0 8rpx 25rpx rgba(76, 175, 80, 0.15),
    0 0 0 4rpx rgba(255, 255, 255, 0.5);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  border: 4rpx solid transparent;
  background-clip: padding-box;
  position: relative;
  overflow: hidden;
  z-index: 1;
}

.plant-image::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: var(--border-radius-large);
  padding: 4rpx;
  background: linear-gradient(135deg, var(--primary-color), var(--accent-color), var(--primary-color));
  background-size: 200% 200%;
  animation: borderRotate 6s linear infinite;
  -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
  -webkit-mask-composite: xor;
  mask-composite: exclude;
  pointer-events: none;
  z-index: -1;
}

.plant-image::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: calc(var(--border-radius-large) - 4rpx);
  background: linear-gradient(145deg, transparent 0%, rgba(255, 255, 255, 0.2) 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
  pointer-events: none;
}

.plant-item:active .plant-image {
  transform: scale(1.15) rotate(3deg);
  box-shadow: 
    var(--shadow-large),
    0 12rpx 35rpx rgba(76, 175, 80, 0.25),
    0 0 0 6rpx rgba(255, 255, 255, 0.7),
    0 0 40rpx rgba(76, 175, 80, 0.3);
}

.plant-item:active .plant-image::after {
  opacity: 1;
}

@keyframes borderRotate {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

.plant-info {
  flex: 1;
  position: relative;
  z-index: 1;
}

.plant-title {
  display: block;
  font-size: 38rpx;
  font-weight: 800;
  color: var(--text-primary);
  margin-bottom: 12rpx;
  letter-spacing: 1rpx;
  line-height: 1.4;
  background: linear-gradient(135deg, var(--text-primary), var(--primary-color));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  transition: all 0.4s ease;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
}

.plant-item:active .plant-title {
  transform: translateX(8rpx);
  background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
  text-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.3);
}

.plant-category {
  font-size: 28rpx;
  color: var(--primary-color);
  font-weight: 600;
  background: linear-gradient(135deg, rgba(76, 175, 80, 0.15), rgba(76, 175, 80, 0.08));
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
  display: inline-block;
  border: 2rpx solid var(--primary-light);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 2rpx 8rpx rgba(76, 175, 80, 0.1);
  position: relative;
  overflow: hidden;
}

.plant-category::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.5), transparent);
  transition: left 0.5s ease;
}

.plant-item:active .plant-category {
  background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
  color: white;
  transform: translateX(8rpx) translateY(-2rpx);
  box-shadow: 0 6rpx 16rpx rgba(76, 175, 80, 0.25);
  border-color: var(--primary-color);
}

.plant-item:active .plant-category::before {
  left: 100%;
}

.collection-btn {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(145deg, var(--card-background), rgba(255, 255, 255, 0.95));
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 
    var(--shadow-medium),
    0 8rpx 25rpx rgba(0, 0, 0, 0.1),
    0 0 0 2rpx rgba(255, 255, 255, 0.6);
  position: relative;
  z-index: 2;
  border: 2rpx solid var(--border-color);
  overflow: hidden;
}

.collection-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
  opacity: 0;
  transition: opacity 0.4s ease;
  z-index: -1;
}

.collection-btn:hover {
  transform: scale(1.1);
  box-shadow: 
    var(--shadow-heavy),
    0 12rpx 35rpx rgba(76, 175, 80, 0.15),
    0 0 0 3rpx rgba(255, 255, 255, 0.8);
}

.collection-btn:active {
  transform: scale(0.95) rotate(20deg);
  box-shadow: 
    var(--shadow-medium),
    0 8rpx 20rpx rgba(76, 175, 80, 0.2),
    0 0 0 2rpx var(--primary-light);
  border-color: var(--primary-light);
}

.collection-btn:active::before {
  opacity: 0.15;
}

.collection-btn .icon {
  font-size: 40rpx;
  color: var(--text-light);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 1;
}

.collection-btn .collected {
  color: var(--error-color);
  animation: heartBeat 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  text-shadow: 
    0 4rpx 12rpx rgba(244, 67, 54, 0.4),
    0 0 20rpx rgba(244, 67, 54, 0.3),
    0 0 40rpx rgba(244, 67, 54, 0.2);
}

@keyframes heartBeat {
  0% { 
    transform: scale(1) rotate(0deg); 
  }
  30% { 
    transform: scale(2.2) rotate(15deg); 
    filter: brightness(1.2);
  }
  60% { 
    transform: scale(1.6) rotate(-10deg); 
  }
  80% { 
    transform: scale(1.3) rotate(5deg); 
  }
  100% { 
    transform: scale(1) rotate(0deg); 
  }
}

/* 植物详情样式优化 */
.plant-detail-section {
  background: linear-gradient(145deg, var(--card-background) 0%, rgba(255, 255, 255, 0.95) 100%);
  margin-bottom: var(--spacing-lg);
  box-shadow: var(--shadow-medium), 0 8rpx 30rpx rgba(76, 175, 80, 0.08);
  border-radius: 0 0 var(--border-radius-xxl) var(--border-radius-xxl);
  overflow: hidden;
  border: 1rpx solid var(--border-color);
  animation: fadeInUp 0.6s ease-out;
}

.plant-detail-image {
  width: 100%;
  height: 400rpx;
  background-color: #f8f8f8;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.plant-detail-section:active .plant-detail-image {
  transform: scale(1.02);
}

.plant-detail-info {
  padding: var(--spacing-xl);
}

.plant-detail-title {
  display: block;
  font-size: 44rpx;
  font-weight: 800;
  color: var(--text-primary);
  margin-bottom: var(--spacing-sm);
  letter-spacing: 1rpx;
  background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
}

.plant-detail-category {
  display: block;
  font-size: 28rpx;
  color: var(--primary-color);
  font-weight: 600;
  margin-bottom: var(--spacing-md);
  background: rgba(76, 175, 80, 0.15);
  padding: 8rpx 24rpx;
  border-radius: 22rpx;
  display: inline-block;
  border: 1rpx solid var(--primary-light);
  transition: all 0.3s ease;
}

.collection-btn-large {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
  color: white;
  padding: var(--spacing-md) var(--spacing-xl);
  border-radius: var(--border-radius-large);
  font-size: 32rpx;
  font-weight: 700;
  box-shadow: var(--shadow-medium), 0 8rpx 25rpx rgba(76, 175, 80, 0.3);
  transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
  margin-top: var(--spacing-md);
  position: relative;
  overflow: hidden;
}

.collection-btn-large::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  transform: translate(-50%, -50%);
  transition: width 0.6s, height 0.6s;
}

.collection-btn-large:active::before {
  width: 300rpx;
  height: 300rpx;
}

.collection-btn-large:active {
  transform: scale(0.97);
  box-shadow: var(--shadow-light), 0 4rpx 15rpx rgba(76, 175, 80, 0.2);
}

.collection-btn-large .icon {
  margin-right: var(--spacing-sm);
  font-size: 36rpx;
}

/* 文章列表样式优化 */
.articles-section {
  background: linear-gradient(145deg, var(--card-background) 0%, rgba(255, 255, 255, 0.95) 100%);
  padding: var(--spacing-xl);
  margin: var(--spacing-lg) var(--spacing-sm);
  border-radius: var(--border-radius-large);
  box-shadow: var(--shadow-light), 0 4rpx 20rpx rgba(76, 175, 80, 0.08);
  border: 1rpx solid var(--border-color);
  animation: fadeInUp 0.6s ease-out 0.2s both;
}

.section-header {
  margin-bottom: var(--spacing-lg);
  padding-bottom: var(--spacing-md);
  border-bottom: 2rpx solid var(--primary-light);
  position: relative;
}

.section-header::after {
  content: '';
  position: absolute;
  bottom: -2rpx;
  left: 0;
  width: 80rpx;
  height: 2rpx;
  background: linear-gradient(90deg, var(--primary-color), var(--accent-color));
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--text-primary);
  letter-spacing: 0.5rpx;
  background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.articles-list {
  margin-top: var(--spacing-md);
}

.article-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-md);
  border-bottom: 1rpx solid var(--border-color);
  transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
  position: relative;
  overflow: hidden;
  border-radius: var(--border-radius-small);
  margin-bottom: 4rpx;
}

.article-item:last-child {
  border-bottom: none;
}

.article-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 4rpx;
  background: linear-gradient(to bottom, var(--primary-color), var(--accent-color));
  transform: scaleY(0);
  transition: transform 0.3s ease;
}

.article-item:active {
  background-color: rgba(76, 175, 80, 0.1);
  padding-left: var(--spacing-lg);
  transform: translateX(5rpx);
  box-shadow: 0 4rpx 15rpx rgba(76, 175, 80, 0.1);
}

.article-item:active::before {
  transform: scaleY(1);
}

.article-title {
  font-size: 30rpx;
  color: var(--text-primary);
  font-weight: 600;
  line-height: 1.5;
  transition: all 0.3s ease;
}

.article-item:active .article-title {
  color: var(--primary-color);
  font-weight: 700;
}

.article-icon {
  font-size: 36rpx;
  color: var(--text-light);
  transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.article-item:active .article-icon {
  transform: translateX(15rpx) scale(1.2);
  color: var(--primary-color);
}

/* 加载状态 */
.loading, .empty, .no-more {
  text-align: center;
  padding: var(--spacing-xxl);
  color: var(--text-light);
  font-size: 28rpx;
  background: linear-gradient(145deg, var(--card-background) 0%, rgba(255, 255, 255, 0.9) 100%);
  margin: var(--spacing-lg) var(--spacing-sm);
  border-radius: var(--border-radius-large);
  box-shadow: var(--shadow-light);
  border: 1rpx solid var(--border-color);
  animation: fadeInUp 0.6s ease-out;
}

.loading::before, .empty::before, .no-more::before {
  content: '';
  display: block;
  width: 80rpx;
  height: 80rpx;
  margin: 0 auto var(--spacing-md);
  background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
  border-radius: 50%;
  opacity: 0.1;
  animation: pulse 1.5s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
    opacity: 0.1;
  }
  50% {
    transform: scale(1.2);
    opacity: 0.2;
  }
}

/* 骨架屏样式 */
.skeleton {
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: loading 1.5s infinite;
  border-radius: var(--border-radius-small);
}

.skeleton-image {
  width: 140rpx;
  height: 140rpx;
  margin-right: var(--spacing-sm);
  border-radius: var(--border-radius-small);
}

.skeleton-title {
  width: 200rpx;
  height: 32rpx;
  margin-bottom: var(--spacing-xs);
}

.skeleton-category {
  width: 150rpx;
  height: 24rpx;
}

@keyframes loading {
  0% { background-position: 200% 0; }
  100% { background-position: -200% 0; }
}