/* pages/plant-list/plant-list.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 页面标题 */
.page-header {
  background: white;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.page-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.plant-count {
  font-size: 24rpx;
  color: #666;
}

/* 植物列表 */
.plants-list {
  padding: 20rpx;
}

.plant-item {
  display: flex;
  align-items: center;
  background: white;
  border-radius: 15rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.plant-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.plant-info {
  flex: 1;
}

.plant-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.plant-category {
  font-size: 24rpx;
  color: #666;
}

.collection-btn {
  width: 60rpx;
  height: 60rpx;
  background: #f8f8f8;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.collection-btn .icon {
  font-size: 28rpx;
  color: #ccc;
}

.collection-btn .collected {
  color: #ff4757;
}

/* 加载状态 */
.loading, .empty, .no-more {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}