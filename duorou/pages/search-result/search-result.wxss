/* pages/search-result/search-result.wxss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(180deg, var(--primary-light, #f0f9f0) 0%, var(--background, #ffffff) 15%);
  overflow: hidden;
}

/* 搜索结果标题 */
.search-header {
  background: transparent;
  padding: 30rpx 30rpx 20rpx;
  flex-shrink: 0;
}

.header-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 20rpx;
}

.keyword-badge {
  flex: 1;
  background: rgba(255, 255, 255, 0.95);
  padding: 16rpx 24rpx;
  border-radius: 999rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  backdrop-filter: blur(10rpx);
}

.keyword-text {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-primary, #333);
  line-height: 1.2;
}

.result-count-badge {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
  background: rgba(255, 255, 255, 0.95);
  padding: 16rpx 24rpx;
  border-radius: 999rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  backdrop-filter: blur(10rpx);
}

.count-number {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--primary-color, #4CAF50);
  line-height: 1;
}

.count-text {
  font-size: 24rpx;
  color: var(--text-secondary, #666);
}

/* 搜索结果列表 */
.search-results {
  flex: 1;
  min-height: 0;
  padding: 0 30rpx 30rpx;
  box-sizing: border-box;
}

.result-item {
  display: flex;
  align-items: center;
  background: var(--card-background, #ffffff);
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(0, 0, 0, 0.04);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.result-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.12);
}

.image-wrapper {
  width: 160rpx;
  height: 160rpx;
  border-radius: 20rpx;
  overflow: hidden;
  margin-right: 24rpx;
  flex-shrink: 0;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.plant-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.plant-info {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 12rpx;
}

.plant-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary, #333);
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.plant-meta {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.plant-category {
  display: inline-block;
  font-size: 24rpx;
  color: var(--text-secondary, #999);
  background: rgba(76, 175, 80, 0.08);
  padding: 6rpx 16rpx;
  border-radius: 999rpx;
  line-height: 1.2;
}

.collection-btn {
  width: 64rpx;
  height: 64rpx;
  background: rgba(244, 67, 54, 0.08);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  transition: all 0.3s ease;
  margin-left: 16rpx;
}

.collection-btn:active {
  background: rgba(244, 67, 54, 0.2);
  transform: scale(0.9);
}

.collection-icon {
  font-size: 36rpx;
  color: var(--error-color, #f44336);
  line-height: 1;
  transition: all 0.3s ease;
}

.collection-icon.collected {
  color: var(--error-color, #f44336);
  animation: heartBeat 0.6s ease;
}

@keyframes heartBeat {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.2); }
}

/* 空状态 */
.empty {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
}

.empty-content {
  text-align: center;
}

.empty-icon {
  display: block;
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-20rpx); }
}

.empty-text {
  display: block;
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-primary, #333);
  margin-bottom: 16rpx;
}

.empty-desc {
  display: block;
  font-size: 26rpx;
  color: var(--text-secondary, #999);
  line-height: 1.6;
}

/* 没有更多 */
.no-more {
  text-align: center;
  padding: 40rpx 30rpx;
  flex-shrink: 0;
}

.no-more-text {
  font-size: 26rpx;
  color: var(--text-secondary, #999);
}

/* 骨架屏样式 */
.skeleton-item {
  background: var(--card-background, #ffffff);
}

.skeleton {
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: loading 1.5s infinite;
  border-radius: 12rpx;
}

.skeleton-image {
  width: 160rpx;
  height: 160rpx;
  margin-right: 24rpx;
  border-radius: 20rpx;
  flex-shrink: 0;
}

.skeleton-title {
  width: 60%;
  height: 36rpx;
  margin-bottom: 16rpx;
}

.skeleton-category {
  width: 40%;
  height: 28rpx;
}

@keyframes loading {
  0% { background-position: 200% 0; }
  100% { background-position: -200% 0; }
}