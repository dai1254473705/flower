/* pages/category/category.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, var(--background) 0%, rgba(76, 175, 80, 0.05) 100%);
  padding: calc(var(--status-bar-height) * 1px + var(--spacing-md)) var(--spacing-sm) var(--spacing-lg);
}

/* 页面标题 */
.page-header {
  text-align: center;
  padding: var(--spacing-xl) var(--spacing-sm);
  margin-bottom: var(--spacing-md);
  background: var(--card-background);
  border-radius: var(--border-radius-large);
  box-shadow: var(--shadow-medium);
  margin: 0 var(--spacing-sm) var(--spacing-lg);
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: 800;
  color: var(--text-primary);
  margin-bottom: var(--spacing-sm);
  letter-spacing: 2rpx;
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--accent-color) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  text-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.2);
}

.page-subtitle {
  font-size: 28rpx;
  color: var(--text-secondary);
  font-weight: 500;
  letter-spacing: 0.5rpx;
  background: rgba(76, 175, 80, 0.1);
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
  display: inline-block;
  border: 1rpx solid var(--primary-light);
}

/* 分类列表 */
.categories-list {
  padding: var(--spacing-sm);
  max-width: 800rpx;
  margin: 0 auto;
}

.category-item {
  display: flex;
  align-items: center;
  padding: var(--spacing-lg);
  transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
  position: relative;
  overflow: hidden;
  background: linear-gradient(145deg, var(--card-background) 0%, rgba(255, 255, 255, 0.8) 100%);
  margin-bottom: var(--spacing-lg);
  border-radius: var(--border-radius-large);
  box-shadow: var(--shadow-light), 0 2rpx 20rpx rgba(76, 175, 80, 0.08);
  border: 1rpx solid var(--border-color);
}

.category-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, var(--primary-color), var(--accent-color));
  transform: scaleX(0);
  transition: transform 0.3s ease;
  transform-origin: left;
}

.category-item::after {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(76, 175, 80, 0.15), transparent);
  transition: left 0.6s ease;
}

.category-item:active::after {
  left: 100%;
}

.category-item:active {
  transform: translateY(-4rpx);
  box-shadow: var(--shadow-heavy), 0 8rpx 30rpx rgba(76, 175, 80, 0.15);
  border-color: var(--primary-light);
}

.category-item:active::before {
  transform: scaleX(1);
}

.category-icon {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
  border-radius: var(--border-radius-large);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: var(--spacing-lg);
  font-size: 64rpx;
  color: white;
  box-shadow: var(--shadow-medium), 0 8rpx 25rpx rgba(76, 175, 80, 0.3);
  transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
  position: relative;
  z-index: 1;
}

.category-item:active .category-icon {
  transform: scale(1.2) rotate(8deg);
  box-shadow: var(--shadow-heavy), 0 12rpx 40rpx rgba(76, 175, 80, 0.4);
}

.category-info {
  flex: 1;
  position: relative;
  z-index: 1;
}

.category-name {
  display: block;
  font-size: 42rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: var(--spacing-xs);
  letter-spacing: 1rpx;
  line-height: 1.3;
  background: linear-gradient(135deg, var(--text-primary) 0%, var(--text-secondary) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  transition: all 0.3s ease;
}

.category-item:active .category-name {
  -webkit-text-fill-color: var(--primary-color);
  background: none;
}

.category-count {
  font-size: 28rpx;
  color: var(--primary-color);
  font-weight: 600;
  background: rgba(76, 175, 80, 0.15);
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
  display: inline-block;
  border: 1rpx solid var(--primary-light);
  transition: all 0.3s ease;
}

.category-item:active .category-count {
  background: rgba(76, 175, 80, 0.25);
  border-color: var(--primary-color);
  transform: scale(1.05);
}

.category-arrow {
  font-size: 56rpx;
  color: var(--text-light);
  position: relative;
  z-index: 1;
  font-weight: bold;
  transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
  opacity: 0.8;
}

.category-item:active .category-arrow {
  transform: translateX(20rpx) scale(1.2);
  color: var(--primary-color);
  opacity: 1;
}

/* 加载状态 */
.loading, .empty {
  text-align: center;
  padding: var(--spacing-xxl) var(--spacing-sm);
  color: var(--text-light);
  font-size: 32rpx;
  background: var(--card-background);
  border-radius: var(--border-radius-large);
  margin: var(--spacing-lg);
  box-shadow: var(--shadow-light);
}

.empty {
  font-size: 30rpx;
}

/* 优化不同主题下的表现 */
.dark-theme .category-item {
  background: linear-gradient(145deg, var(--card-background) 0%, rgba(30, 30, 30, 0.9) 100%);
}

.dark-theme .page-header {
  background: linear-gradient(145deg, var(--card-background) 0%, rgba(30, 30, 30, 0.9) 100%);
}

/* 添加微妙的动画效果 */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.category-item {
  animation: fadeInUp 0.6s ease-out;
}

.category-item:nth-child(1) { animation-delay: 0.1s; }
.category-item:nth-child(2) { animation-delay: 0.2s; }
.category-item:nth-child(3) { animation-delay: 0.3s; }
.category-item:nth-child(4) { animation-delay: 0.4s; }
.category-item:nth-child(5) { animation-delay: 0.5s; }
.category-item:nth-child(6) { animation-delay: 0.6s; }
.category-item:nth-child(7) { animation-delay: 0.7s; }
.category-item:nth-child(8) { animation-delay: 0.8s; }
.category-item:nth-child(9) { animation-delay: 0.9s; }
.category-item:nth-child(10) { animation-delay: 1s; }