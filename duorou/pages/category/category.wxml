<!--pages/category/category.wxml-->
<view class="container {{currentTheme}}" style="font-size: {{fontSizeValue}}rpx;">
  <!-- 页面标题 -->
  <view class="page-header">
    <text class="page-title">植物分类</text>
    <text class="page-subtitle">按科属分类浏览多肉植物</text>
  </view>

  <!-- 分类列表 -->
  <view class="categories-list">
    <block wx:for="{{categories}}" wx:key="name">
      <view class="category-item" bindtap="goToPlantList" data-category="{{item.name}}">
        <view class="category-icon">
          <text>{{item.icon}}</text>
        </view>
        <view class="category-info">
          <text class="category-name">{{item.name}}</text>
          <text class="category-count">{{item.count}}种植物</text>
        </view>
        <view class="category-arrow">
          <text>›</text>
        </view>
      </view>
    </block>
  </view>

  <!-- 加载状态 -->
  <view wx:if="{{loading}}" class="loading">
    <text>加载中...</text>
  </view>

  <view wx:if="{{!loading && categories.length === 0}}" class="empty">
    <text>暂无分类数据</text>
  </view>
</view>