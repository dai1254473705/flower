/* pages/index/index.wxss */
.container {
  height: 100vh;
  background-color: var(--background);
  display: flex;
  flex-direction: column;
  padding-top: calc(var(--status-bar-height) * 1px);
  transition: var(--transition);
}

/* 轮播图样式 */
.banner-section {
  width: 100%;
  position: relative;
  height: 400rpx;
  overflow: hidden;
}

.banner-swiper {
  width: 100%;
  height: 100%;
}

.banner-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.banner-mask {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: linear-gradient(to top, rgba(0,0,0,0.6), transparent);
  pointer-events: none;
}

.banner-title {
  position: absolute;
  bottom: 40rpx;
  left: 40rpx;
  color: white;
  font-size: 48rpx;
  font-weight: bold;
  text-shadow: 0 2rpx 10rpx rgba(0,0,0,0.5);
  pointer-events: none;
}

/* 搜索栏样式 */
.search-section {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
  padding: 20rpx 20rpx 30rpx;
  border-radius: 0 0 40rpx 40rpx;
  box-shadow: 0 8rpx 30rpx rgba(76, 175, 80, 0.4);
  margin-bottom: 10rpx;
  transition: var(--transition);
}

.search-bar {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.search-input {
  flex: 1;
  height: 80rpx;
  background: rgba(255,255,255,0.95);
  border-radius: 40rpx;
  padding: 0 30rpx;
  font-size: var(--font-size-md);
  color: var(--text-primary);
  border: 1rpx solid rgba(255,255,255,0.8);
  backdrop-filter: blur(15rpx);
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.search-btn {
  width: 120rpx;
  height: 80rpx;
  background: rgba(255,255,255,0.95);
  color: var(--primary-color);
  border-radius: 40rpx;
  margin-left: 20rpx;
  font-size: var(--font-size-md);
  line-height: 80rpx;
  border: 1rpx solid rgba(255,255,255,0.8);
  backdrop-filter: blur(15rpx);
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.category-btn {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: rgba(255,255,255,0.95);
  border-radius: 15rpx;
  font-size: var(--font-size-md);
  color: var(--primary-color);
  border: 1rpx solid rgba(255,255,255,0.8);
  backdrop-filter: blur(15rpx);
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.settings-btn {
  flex: 0 0 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  background: rgba(255,255,255,0.95);
  border-radius: 15rpx;
  font-size: var(--font-size-sm);
  color: var(--primary-color);
  border: 1rpx solid rgba(255,255,255,0.8);
  backdrop-filter: blur(15rpx);
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.settings-btn .icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.category-btn .icon {
  font-size: 32rpx;
  color: var(--primary-color);
}

/* 植物网格样式 */
.plants-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  padding: 20rpx;
  flex: 1;
  overflow-y: auto;
  align-content: flex-start;
  height: calc(100vh - calc(var(--status-bar-height) * 1px) - 480rpx);
}

.plant-card {
  background: var(--card-background);
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: var(--shadow-light);
  position: relative;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  width: calc(50% - 10rpx);
  min-height: 450rpx;
  display: flex;
  flex-direction: column;
  border: 1rpx solid var(--border-color);
}

.plant-card:active {
  transform: scale(0.98);
  box-shadow: var(--shadow-medium);
}

.plant-image {
  width: 100%;
  height: 350rpx;
  object-fit: cover;
  display: block;
  background-color: var(--background);
  border-bottom: 1rpx solid var(--border-color);
}

.plant-info {
  padding: 20rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.plant-title {
  display: block;
  font-size: var(--font-size-md);
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 10rpx;
}

.plant-category {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
}
/* 收藏按钮 */
.collection-btn {
  position: absolute;
  top: var(--spacing-sm);
  right: var(--spacing-sm);
  width: 60rpx;
  height: 60rpx;
  background: rgba(255,255,255,0.95);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: var(--shadow-light);
  transition: all 0.3s ease;
  z-index: 10;
}

.collection-btn:active {
  transform: scale(0.9);
}

.collection-btn .icon {
  font-size: 34rpx;
  color: var(--text-light);
  transition: color 0.3s ease;
}

.collection-btn .collected {
  color: var(--error-color);
  animation: heartBeat 0.6s ease;
}

@keyframes heartBeat {
  0% { transform: scale(1); }
  50% { transform: scale(1.3); }
  100% { transform: scale(1); }
}

/* 加载状态 */
.loading, .empty, .no-more {
  text-align: center;
  padding: 40rpx;
  color: var(--text-light);
  font-size: var(--font-size-md);
}

/* 骨架屏样式 */
.skeleton-card {
  border: none;
}

.skeleton-image {
  width: 100%;
  height: 350rpx;
  border-radius: 0;
}

.skeleton-title {
  width: 70%;
  height: 36rpx;
  margin-bottom: 10rpx;
  border-radius: 18rpx;
}

.skeleton-category {
  width: 50%;
  height: 28rpx;
  border-radius: 14rpx;
}