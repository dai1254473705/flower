/* pages/index/index.wxss */
.container {
  height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
  padding-top: var(--status-bar-height);
}

/* 搜索栏样式 */
.search-section {
  background: linear-gradient(135deg, #4CAF50 0%, #81C784 100%);
  padding: 40rpx 20rpx 30rpx;
  border-radius: 0 0 40rpx 40rpx;
  box-shadow: 0 8rpx 30rpx rgba(76, 175, 80, 0.4);
  margin-bottom: 10rpx;
}

.search-bar {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.search-input {
  flex: 1;
  height: 80rpx;
  background: rgba(255,255,255,0.9);
  border-radius: 40rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #333;
  border: 1rpx solid rgba(255,255,255,0.5);
  backdrop-filter: blur(10rpx);
}

.search-btn {
  width: 120rpx;
  height: 80rpx;
  background: rgba(255,255,255,0.9);
  color: #4CAF50;
  border-radius: 40rpx;
  margin-left: 20rpx;
  font-size: 28rpx;
  line-height: 80rpx;
  border: 1rpx solid rgba(255,255,255,0.5);
  backdrop-filter: blur(10rpx);
}

.category-btn {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: rgba(255,255,255,0.9);
  border-radius: 15rpx;
  font-size: 28rpx;
  color: #4CAF50;
  border: 1rpx solid rgba(255,255,255,0.5);
  backdrop-filter: blur(10rpx);
}

.category-btn .icon {
  font-size: 32rpx;
  color: #4CAF50;
}

/* 植物网格样式 */
.plants-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  padding: 20rpx;
  flex: 1;
  overflow-y: auto;
  align-content: flex-start;
  height: calc(100vh - var(--status-bar-height) - 200rpx);
}

.plant-card {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08);
  position: relative;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  width: calc(50% - 10rpx);
  min-height: 450rpx;
}

.plant-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.15);
}

.plant-image {
  width: 100%;
  height: 350rpx;
  object-fit: cover;
  display: block;
  background-color: #f8f8f8;
}

.plant-info {
  padding: 20rpx;
}

.plant-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.plant-category {
  font-size: 24rpx;
  color: #666;
}

.collection-btn {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 60rpx;
  height: 60rpx;
  background: rgba(255,255,255,0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.collection-btn .icon {
  font-size: 32rpx;
  color: #ccc;
}

.collection-btn .collected {
  color: #ff4757;
}

/* 加载状态 */
.loading, .empty, .no-more {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}