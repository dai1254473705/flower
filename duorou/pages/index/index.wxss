/* 搜索栏样式 */
.search-section {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
  padding: 20rpx 20rpx 28rpx;
  border-radius: 0 0 40rpx 40rpx;
  box-shadow: 0 8rpx 30rpx rgba(76, 175, 80, 0.3);
  margin-bottom: 10rpx;
  transition: var(--transition);
}

.search-bar {
  display: flex;
  align-items: center;
  background: #ffffff;
  border-radius: 999rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
  padding: 4rpx;
}

.search-input-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  min-height: 72rpx;
}

.search-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
  opacity: 0.5;
}

.search-input {
  flex: 1;
  height: 72rpx;
  background: transparent;
  font-size: 28rpx;
  color: var(--text-primary, #333);
  border: none;
  line-height: 72rpx;
}

.search-input::placeholder {
  color: var(--text-secondary, #999);
}

.search-btn {
  min-width: 120rpx;
  height: 72rpx;
  background: var(--primary-color, #4CAF50);
  border-radius: 999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 24rpx;
  transition: all 0.3s ease;
}

.search-btn:active {
  background: var(--primary-dark, #388E3C);
  transform: scale(0.98);
}

.search-btn-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #ffffff;
  line-height: 1;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.category-btn {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: rgba(255,255,255,0.95);
  border-radius: 15rpx;
  font-size: var(--font-size-md);
  color: var(--primary-color);
  border: 1rpx solid rgba(255,255,255,0.8);
  backdrop-filter: blur(15rpx);
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.settings-btn {
  flex: 0 0 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  background: rgba(255,255,255,0.95);
  border-radius: 15rpx;
  font-size: var(--font-size-sm);
  color: var(--primary-color);
  border: 1rpx solid rgba(255,255,255,0.8);
  backdrop-filter: blur(15rpx);
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.settings-btn .icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

/* 分类 + 列表布局 */
.category-layout {
  flex: 1;
  display: flex;
  min-height: 0;
}

.category-sidebar {
  width: 200rpx;
  background: var(--card-background);
  /* 使用固定色作为兜底，避免变量缺失导致不显示 */
  border-right: 2rpx dashed var(--border-color, #e5e5e5);
  padding: 8rpx;
  box-sizing: border-box;
  height: 100%;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 14rpx 8rpx;
  border-radius: 12rpx;
  margin-bottom: 10rpx;
  color: var(--text-primary);
  background: var(--background);
  border: 1rpx dashed var(--border-color, #e5e5e5);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
  transition: var(--transition);
}

.category-item.active {
  background: var(--card-background, #ffffff);
  border-color: var(--primary-color);
  border-width: 2rpx;
  color: var(--primary-color);
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.1);
}

.category-count-badge {
  min-width: 60rpx;
  padding: 6rpx 12rpx;
  text-align: center;
  border-radius: 999rpx;
  font-size: var(--font-size-sm);
  color: var(--primary-color);
  background: rgba(0, 0, 0, 0.04);
}

.category-item.active .category-count-badge {
  color: #ffffff;
  background: var(--primary-color);
  font-weight: 600;
}

.category-icon {
  font-size: 32rpx;
}

.category-item.active .category-icon {
  opacity: 1;
}

.category-name {
  font-size: var(--font-size-md);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 100%;
  text-align: center;
  font-weight: 600;
}

.category-item.active .category-name {
  color: var(--primary-color);
  font-weight: 700;
}


.plants-area {
  flex: 1;
  height: 100%;
  background: var(--background);
}

/* 植物网格样式 */
.plants-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  padding: 20rpx;
  align-content: flex-start;
}

.plant-card {
  background: var(--card-background);
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: var(--shadow-light);
  position: relative;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  width: calc(50% - 10rpx);
  min-height: 400rpx;
  display: flex;
  flex-direction: column;
  border: 1rpx solid var(--border-color);
}

.plant-card:active {
  transform: scale(0.98);
  box-shadow: var(--shadow-medium);
}

.plant-image-wrapper {
  width: 100%;
  position: relative;
  overflow: hidden;
  background-color: var(--background);
  border-bottom: 1rpx solid var(--border-color);
}

/* 使用 padding-bottom 技巧实现 1:1 比例 */
.plant-image-wrapper::before {
  content: '';
  display: block;
  padding-bottom: 100%; /* 1:1 比例 */
}

.plant-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: contain;
  display: block;
}

.plant-info {
  padding: 20rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.plant-title {
  display: block;
  font-size: var(--font-size-md);
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.plant-category-wrapper {
  display: inline-block;
}

.plant-category {
  display: inline-block;
  font-size: 20rpx;
  color: var(--primary-color, #4CAF50);
  background: rgba(76, 175, 80, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  line-height: 1.4;
  font-weight: 500;
}
/* 收藏按钮 */
.collection-btn {
  position: absolute;
  top: var(--spacing-sm);
  right: var(--spacing-sm);
  width: 60rpx;
  height: 60rpx;
  background: rgba(255,255,255,0.95);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: var(--shadow-light);
  transition: all 0.3s ease;
  z-index: 10;
}

.collection-btn:active {
  transform: scale(0.9);
}

.collection-btn .icon {
  font-size: 34rpx;
  color: var(--text-light);
  transition: color 0.3s ease;
}

.collection-btn .collected {
  color: var(--error-color);
  animation: heartBeat 0.6s ease;
}

@keyframes heartBeat {
  0% { transform: scale(1); }
  50% { transform: scale(1.3); }
  100% { transform: scale(1); }
}

/* 加载状态 */
.loading, .empty, .no-more {
  text-align: center;
  padding: 40rpx;
  color: var(--text-light);
  font-size: var(--font-size-md);
}

/* 骨架屏样式 */
.skeleton-card {
  border: none;
}

.skeleton-image {
  width: 100%;
  padding-bottom: 100%; /* 1:1 比例 */
  border-radius: 0;
  position: relative;
}

.skeleton-title {
  width: 70%;
  height: 36rpx;
  margin-bottom: 10rpx;
  border-radius: 18rpx;
}

.skeleton-category {
  width: 50%;
  height: 28rpx;
  border-radius: 14rpx;
}