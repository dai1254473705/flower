<!-- settings.wxml -->
<view class="container {{currentTheme}}" style="font-size: {{fontSizeValue}}rpx;">
  <!-- 主题设置 -->
  <view class="setting-section">
    <view class="section-header">
      <text class="section-icon">🎨</text>
      <text class="section-title">主题配色</text>
    </view>
    <view class="theme-grid">
      <block wx:for="{{themes}}" wx:key="id">
        <view 
          class="theme-item {{userSettings.themeName === item.id ? 'active' : ''}}" 
          bindtap="onThemeChange" 
          data-theme="{{item.id}}"
        >
          <view class="theme-colors">
            <block wx:for="{{item.colors}}" wx:for-item="color" wx:key="index">
              <view class="theme-color" style="background-color: {{color}}"></view>
            </block>
          </view>
          <text class="theme-name">{{item.name}}</text>
          <view class="theme-check" wx:if="{{userSettings.themeName === item.id}}">
            <text class="check-icon">✓</text>
          </view>
        </view>
      </block>
    </view>
  </view>

  <!-- 缓存管理 -->
  <view class="setting-section">
    <view class="section-header">
      <text class="section-icon">💾</text>
      <text class="section-title">缓存管理</text>
    </view>
    <view class="cache-item" bindtap="onClearCache">
      <view class="cache-info">
        <text class="cache-name">清除缓存</text>
        <text class="cache-size">{{cacheSize}} MB</text>
      </view>
      <view class="cache-action">
        <text class="arrow-icon">›</text>
      </view>
    </view>
  </view>

  <!-- 问题反馈 -->
  <view class="setting-section">
    <view class="section-header">
      <text class="section-icon">💬</text>
      <text class="section-title">问题反馈</text>
    </view>
    <button class="feedback-item feedback-button" open-type="contact" session-from="settings_page">
      <view class="feedback-info">
        <text class="feedback-name">联系客服</text>
        <text class="feedback-desc">反馈内容不准确或遇到问题</text>
      </view>
      <view class="feedback-action">
        <text class="arrow-icon">›</text>
      </view>
    </button>
  </view>

  <!-- 关于信息 -->
  <view class="setting-section">
    <view class="section-header">
      <text class="section-icon">ℹ️</text>
      <text class="section-title">关于多肉小园</text>
    </view>
    <view class="about-content">
      <text class="about-text">多肉小园是一个为多肉植物爱好者打造的知识分享平台。在这里，你可以浏览各种多肉植物，阅读养护文章，收藏喜欢的品种。</text>
      <view class="version-info">
        <text class="version-label">版本</text>
        <text class="version-text">1.0.0</text>
      </view>
    </view>
  </view>
</view>