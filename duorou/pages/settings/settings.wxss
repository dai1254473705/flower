/* 设置页样式 */
.container {
  padding: 30rpx;
  background: linear-gradient(180deg, var(--primary-light, #f0f9f0) 0%, var(--background, #ffffff) 15%);
  min-height: 100vh;
  box-sizing: border-box;
}

/* 设置区块样式 */
.setting-section {
  background: var(--card-background, #ffffff);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid rgba(0, 0, 0, 0.04);
}

/* 区块标题样式 */
.section-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid var(--border-color, #f0f0f0);
}

.section-icon {
  font-size: 36rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary, #333);
}

/* 主题网格样式 */
.theme-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

/* 主题项样式 */
.theme-item {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 16rpx;
  border: 2rpx solid var(--border-color, #e5e5e5);
  border-radius: 20rpx;
  transition: all 0.3s ease;
  background: var(--background, #ffffff);
}

.theme-item:active {
  transform: scale(0.98);
}

.theme-item.active {
  border-color: var(--primary-color, #4CAF50);
  background: var(--primary-light, rgba(76, 175, 80, 0.08));
  box-shadow: 0 4rpx 16rpx rgba(76, 175, 80, 0.2);
}

/* 主题颜色样式 */
.theme-colors {
  display: flex;
  gap: 8rpx;
  margin-bottom: 16rpx;
  justify-content: center;
}

.theme-color {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  border: 2rpx solid rgba(255, 255, 255, 0.8);
}

/* 主题名称样式 */
.theme-name {
  font-size: 28rpx;
  color: var(--text-primary, #333);
  font-weight: 500;
}

.theme-item.active .theme-name {
  color: var(--primary-color, #4CAF50);
  font-weight: 600;
}

/* 主题选中标记样式 */
.theme-check {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  width: 40rpx;
  height: 40rpx;
  background: var(--primary-color, #4CAF50);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(76, 175, 80, 0.3);
}

.check-icon {
  font-size: 24rpx;
  color: #ffffff;
  font-weight: bold;
  line-height: 1;
}

/* 缓存管理样式 */
.cache-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: var(--background, #f8f8f8);
  border-radius: 16rpx;
  transition: all 0.3s ease;
  border: 1rpx solid var(--border-color, #e5e5e5);
}

.cache-item:active {
  background: var(--primary-light, rgba(76, 175, 80, 0.1));
  transform: scale(0.98);
}

.cache-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.cache-name {
  font-size: 30rpx;
  font-weight: 500;
  color: var(--text-primary, #333);
}

.cache-size {
  font-size: 24rpx;
  color: var(--text-secondary, #999);
}

.cache-action {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 48rpx;
  height: 48rpx;
}

.arrow-icon {
  font-size: 40rpx;
  color: var(--text-light, #ccc);
  font-weight: 300;
  line-height: 1;
}

/* 关于信息样式 */
.about-content {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.about-text {
  font-size: 28rpx;
  color: var(--text-secondary, #666);
  line-height: 1.8;
  display: block;
}

/* 版本信息样式 */
.version-info {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid var(--border-color, #f0f0f0);
}

.version-label {
  font-size: 24rpx;
  color: var(--text-secondary, #999);
}

.version-text {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--primary-color, #4CAF50);
}

/* 隐私说明样式 */
.privacy-section {
  margin-top: 32rpx;
  padding-top: 32rpx;
  border-top: 1rpx solid var(--border-color, #f0f0f0);
}

.privacy-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.privacy-icon {
  font-size: 32rpx;
}

.privacy-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary, #333);
}

.privacy-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.privacy-item {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
}

.privacy-bullet {
  color: var(--primary-color, #4CAF50);
  font-size: 24rpx;
  font-weight: bold;
  line-height: 1.6;
  flex-shrink: 0;
  margin-top: 4rpx;
}

.privacy-text {
  font-size: 26rpx;
  color: var(--text-secondary, #666);
  line-height: 1.6;
  flex: 1;
}

/* 反馈功能样式 */
.feedback-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: var(--background, #f8f8f8);
  border-radius: 16rpx;
  transition: all 0.3s ease;
  border: 1rpx solid var(--border-color, #e5e5e5);
}

.feedback-item:active {
  background: var(--primary-light, rgba(76, 175, 80, 0.1));
  transform: scale(0.98);
}

.feedback-button {
  width: 100%;
  padding: 0;
  margin: 0;
  background: transparent;
  border: none;
  border-radius: 16rpx;
  line-height: normal;
  font-size: inherit;
}

.feedback-button::after {
  border: none;
}

.feedback-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  flex: 1;
}

.feedback-name {
  font-size: 30rpx;
  font-weight: 500;
  color: var(--text-primary, #333);
}

.feedback-desc {
  font-size: 24rpx;
  color: var(--text-secondary, #999);
  line-height: 1.4;
}

.feedback-action {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 48rpx;
  height: 48rpx;
}