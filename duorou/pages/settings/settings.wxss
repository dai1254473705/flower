/* 设置页样式 */
.container {
  padding: 16px;
  background-color: var(--background);
  min-height: 100vh;
}

/* 页面标题样式 */
.page-title {
  font-size: 24px;
  font-weight: bold;
  color: var(--text-primary);
  display: block;
  margin-bottom: 24px;
  text-align: center;
}

/* 设置区块样式 */
.setting-section {
  background-color: var(--card-background);
  border-radius: 8px;
  padding: 16px;
  margin-bottom: 16px;
  box-shadow: var(--shadow-light);
}

/* 区块标题样式 */
.section-title {
  font-size: 16px;
  font-weight: bold;
  color: var(--text-primary);
  display: block;
  margin-bottom: 16px;
  padding-bottom: 8px;
  border-bottom: 1px solid var(--border-color);
}

/* 主题网格样式 */
.theme-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 12px;
}

/* 主题项样式 */
.theme-item {
  position: relative;
  display: flex;
  align-items: center;
  padding: 12px;
  border: 2px solid var(--border-color);
  border-radius: 8px;
  transition: all 0.3s ease;
}

.theme-item.active {
  border-color: var(--primary-color);
  box-shadow: var(--shadow-light);
}

/* 主题颜色样式 */
.theme-colors {
  display: flex;
  gap: 4px;
  margin-right: 12px;
}

.theme-color {
  width: 24px;
  height: 24px;
  border-radius: 50%;
}

/* 主题名称样式 */
.theme-name {
  font-size: 14px;
  color: var(--text-primary);
  flex: 1;
}

/* 主题选中标记样式 */
.theme-check {
  position: absolute;
  top: 8px;
  right: 8px;
  width: 20px;
  height: 20px;
  background-color: var(--primary-color);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.check-text {
  font-size: 12px;
  color: white;
  font-weight: bold;
}

/* 字体大小网格样式 */
.font-size-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12px;
}

/* 字体大小项样式 */
.font-size-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 12px;
  border: 2px solid var(--border-color);
  border-radius: 8px;
  transition: all 0.3s ease;
}

.font-size-item.active {
  border-color: var(--primary-color);
  background-color: rgba(76, 175, 80, 0.1);
  box-shadow: var(--shadow-light);
}

/* 字体大小预览样式 */
.font-size-preview {
  color: var(--text-primary);
  margin-bottom: 4px;
}

/* 字体大小名称样式 */
.font-size-name {
  font-size: 12px;
  color: var(--text-secondary);
}

/* 字体大小描述样式 */
.font-size-desc {
  font-size: 12px;
  color: var(--text-secondary);
  margin-top: 12px;
  padding-top: 12px;
  border-top: 1px solid var(--border-color);
}

/* 缓存管理样式 */
.cache-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px;
  border: 2px solid var(--border-color);
  border-radius: 8px;
  transition: all 0.3s ease;
  cursor: pointer;
}

.cache-item:active {
  background-color: var(--background);
}

.cache-info {
  display: flex;
  flex-direction: column;
}

.cache-name {
  font-size: 14px;
  color: var(--text-primary);
  margin-bottom: 4px;
}

.cache-size {
  font-size: 12px;
  color: var(--text-secondary);
}

.arrow {
  font-size: 16px;
  color: var(--text-light);
}

/* 关于信息样式 */
.about-text {
  font-size: 14px;
  color: var(--text-secondary);
  line-height: 1.6;
  margin-bottom: 16px;
  display: block;
}

/* 版本信息样式 */
.version-info {
  padding-top: 12px;
  border-top: 1px solid var(--border-color);
}

.version-text {
  font-size: 12px;
  color: var(--text-secondary);
  display: block;
}