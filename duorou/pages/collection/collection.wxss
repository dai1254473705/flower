/* pages/collection/collection.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, var(--primary-light, #f0f9f0) 0%, var(--background, #ffffff) 20%);
  display: flex;
  flex-direction: column;
}

.toolbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 30rpx 20rpx;
  background: transparent;
}

.count-badge {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
  background: rgba(255, 255, 255, 0.9);
  padding: 12rpx 24rpx;
  border-radius: 999rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.count-number {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--primary-color, #4CAF50);
  line-height: 1;
}

.count-text {
  font-size: 24rpx;
  color: var(--text-secondary, #666);
}

.clear-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: rgba(255, 255, 255, 0.9);
  padding: 12rpx 20rpx;
  border-radius: 999rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.clear-btn:active {
  transform: scale(0.95);
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.1);
}

.clear-icon {
  font-size: 28rpx;
}

.clear-text {
  font-size: 26rpx;
  color: var(--text-primary, #333);
}

/* 收藏列表 */
.collection-list {
  flex: 1;
  padding: 0 30rpx 30rpx;
  box-sizing: border-box;
}

.collection-item {
  display: flex;
  align-items: center;
  background: var(--card-background, #ffffff);
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
  border: 1rpx solid rgba(0, 0, 0, 0.04);
}

.collection-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.12);
}

.image-wrapper {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  border-radius: 20rpx;
  overflow: hidden;
  margin-right: 24rpx;
  flex-shrink: 0;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.plant-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.image-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(76, 175, 80, 0.1) 0%, transparent 100%);
  pointer-events: none;
}

.plant-info {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.plant-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary, #333);
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 1.4;
}

.plant-meta {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.plant-category {
  display: inline-block;
  font-size: 24rpx;
  color: var(--text-secondary, #999);
  background: rgba(76, 175, 80, 0.08);
  padding: 6rpx 16rpx;
  border-radius: 999rpx;
  line-height: 1.2;
}

.remove-btn {
  width: 64rpx;
  height: 64rpx;
  background: rgba(244, 67, 54, 0.08);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  transition: all 0.3s ease;
  margin-left: 16rpx;
}

.remove-btn:active {
  background: rgba(244, 67, 54, 0.2);
  transform: scale(0.9);
}

.remove-icon {
  font-size: 32rpx;
  color: var(--error-color, #f44336);
  font-weight: 300;
  line-height: 1;
}

/* 空状态 */
.empty {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
}

.empty-content {
  text-align: center;
}

.empty-icon {
  display: block;
  font-size: 140rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-20rpx); }
}

.empty-text {
  display: block;
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-primary, #333);
  margin-bottom: 16rpx;
}

.empty-desc {
  display: block;
  font-size: 26rpx;
  color: var(--text-secondary, #999);
  line-height: 1.6;
}