/* pages/collection/collection.wxss */
.container {
  min-height: 100vh;
  background-color: var(--background);
}

/* 页面标题 */
.page-header {
  background: var(--card-background);
  padding: var(--spacing-md);
  border-bottom: 1rpx solid var(--border-color);
  text-align: center;
  box-shadow: var(--shadow-light);
}

.page-title {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: var(--spacing-xs);
}

.collection-count {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 清空收藏按钮 */
.clear-section {
  padding: var(--spacing-sm);
  text-align: center;
}

.clear-btn {
  background: var(--error-color);
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 15rpx 30rpx;
  font-size: 26rpx;
  transition: all 0.3s ease;
}

.clear-btn:active {
  background: #D32F2F;
  transform: scale(0.96);
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.15);
}

/* 收藏列表 */
.collection-list {
  padding: var(--spacing-sm);
}

.collection-item {
  display: flex;
  align-items: center;
  background: var(--card-background);
  border-radius: var(--border-radius-medium);
  padding: var(--spacing-sm);
  margin-bottom: var(--spacing-sm);
  box-shadow: var(--shadow-medium);
  position: relative;
  transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
  overflow: hidden;
}

.collection-item::after {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: rgba(76, 175, 80, 0.05);
  transition: left 0.3s ease;
}

.collection-item:active::after {
  left: 0;
}

.collection-item:active {
  transform: translateX(10rpx);
  box-shadow: var(--shadow-light);
}

.plant-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 15rpx;
  margin-right: var(--spacing-sm);
  object-fit: cover;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.plant-info {
  flex: 1;
  position: relative;
  z-index: 1;
}

.plant-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.plant-category {
  font-size: 24rpx;
  color: var(--text-secondary);
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.remove-btn {
  width: 60rpx;
  height: 60rpx;
  background: rgba(244, 67, 54, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--error-color);
  font-size: 32rpx;
  font-weight: bold;
  transition: all 0.3s ease;
  position: relative;
  z-index: 1;
}

.remove-btn:active {
  background: var(--error-color);
  color: white;
  transform: scale(0.9);
  box-shadow: 0 2rpx 10rpx rgba(244, 67, 54, 0.3);
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 200rpx var(--spacing-sm);
}

.empty-icon {
  display: block;
  font-size: 120rpx;
  color: #E0E0E0;
  margin-bottom: var(--spacing-sm);
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.1); }
  100% { transform: scale(1); }
}

.empty-text {
  display: block;
  font-size: 28rpx;
  color: var(--text-light);
  margin-bottom: var(--spacing-xs);
}

.empty-desc {
  display: block;
  font-size: 24rpx;
  color: var(--text-light);
}