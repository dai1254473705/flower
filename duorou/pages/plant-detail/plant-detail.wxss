/* pages/plant-detail/plant-detail.wxss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(180deg, var(--primary-light, #f0f9f0) 0%, var(--background, #ffffff) 20%);
  overflow: hidden;
}

/* 植物大图区域 */
.plant-image-section {
  position: relative;
  width: 100%;
  height: 600rpx;
  flex-shrink: 0;
  overflow: hidden;
  background: var(--card-background, #f5f5f5);
}

.plant-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.5s ease;
}

.plant-image:active {
  transform: scale(1.05);
}

.image-gradient {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 200rpx;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.4), transparent);
  pointer-events: none;
}

/* 收藏按钮 */
.collection-btn {
  position: absolute;
  bottom: 30rpx;
  right: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 999rpx;
  padding: 20rpx 28rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
  z-index: 10;
}

.collection-btn:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

.collection-icon {
  font-size: 48rpx;
  color: #ccc;
  line-height: 1;
  transition: all 0.3s ease;
}

.collection-icon.collected {
  color: var(--error-color, #f44336);
  animation: heartBeat 0.6s ease;
}

.collection-text {
  font-size: 24rpx;
  color: var(--text-primary, #333);
  font-weight: 500;
}

@keyframes heartBeat {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.2); }
}

/* 图片信息覆盖层 */
.image-info {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 40rpx 30rpx 30rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.plant-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #ffffff;
  line-height: 1.3;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.category-tag {
  align-self: flex-start;
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(10rpx);
  padding: 12rpx 24rpx;
  border-radius: 999rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

.category-text {
  font-size: 26rpx;
  color: #ffffff;
  font-weight: 600;
}

/* 文章列表区域 */
.articles-section {
  flex: 1;
  min-height: 0;
  background: var(--background, #ffffff);
  padding: 0 30rpx 30rpx;
  box-sizing: border-box;
}

.section-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
  padding: 0 8rpx;
}

.section-icon {
  font-size: 36rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--text-primary, #333);
}

/* 文章分组样式 */
.article-groups {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.article-group {
  background: var(--card-background, #ffffff);
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid rgba(0, 0, 0, 0.04);
}

.group-header {
  display: flex;
  align-items: center;
  padding: 24rpx 28rpx;
  background: linear-gradient(135deg, rgba(76, 175, 80, 0.08) 0%, rgba(76, 175, 80, 0.03) 100%);
  border-bottom: 1rpx solid var(--border-color, #f0f0f0);
}

.group-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.group-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-primary, #333);
  flex: 1;
}

.group-count {
  font-size: 24rpx;
  color: var(--text-secondary, #999);
  background: rgba(76, 175, 80, 0.1);
  padding: 6rpx 16rpx;
  border-radius: 999rpx;
}

.group-articles {
  display: flex;
  flex-direction: column;
}

.article-item {
  display: flex;
  align-items: center;
  padding: 24rpx 28rpx;
  border-bottom: 1rpx solid var(--border-color, #f0f0f0);
  transition: all 0.3s ease;
  position: relative;
}

.article-item:active {
  background: rgba(76, 175, 80, 0.05);
}

.article-item:last-child {
  border-bottom: none;
}

.article-cover {
  width: 140rpx;
  height: 140rpx;
  border-radius: 16rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
  background: #f5f5f5;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.article-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  min-width: 0;
  gap: 12rpx;
}

.article-title {
  font-size: 28rpx;
  color: var(--text-primary, #333);
  line-height: 1.5;
  font-weight: 500;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.article-meta {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: var(--text-secondary, #999);
  gap: 20rpx;
}

.article-time {
  color: var(--text-secondary, #999);
}

.article-read {
  color: var(--text-secondary, #999);
}

.article-arrow {
  font-size: 40rpx;
  color: var(--text-light, #ccc);
  margin-left: 16rpx;
  flex-shrink: 0;
  font-weight: 300;
}

/* 空状态 - 无相关文章 */
.empty-articles {
  text-align: center;
  padding: 120rpx 30rpx;
  margin: 0 30rpx 30rpx;
  background: var(--card-background, #ffffff);
  border-radius: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.empty-icon {
  display: block;
  font-size: 80rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-text {
  display: block;
  font-size: 28rpx;
  color: var(--text-secondary, #999);
}

/* 操作按钮区域 */
.action-section {
  padding: 30rpx;
  display: flex;
  gap: 20rpx;
  background: var(--background, #ffffff);
}

.action-btn {
  flex: 1;
  background: var(--card-background, #ffffff);
  border: 1rpx solid var(--border-color, #e5e5e5);
  border-radius: 20rpx;
  padding: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.action-btn:active {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.btn-icon {
  font-size: 44rpx;
  line-height: 1;
}

.btn-text {
  font-size: 26rpx;
  color: var(--text-primary, #333);
  font-weight: 500;
}

.share-btn:active {
  background: rgba(76, 175, 80, 0.08);
  border-color: var(--primary-color, #4CAF50);
}

.feedback-btn:active {
  background: rgba(255, 152, 0, 0.08);
  border-color: #ff9800;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 250rpx 30rpx;
}

.empty-loading {
  font-size: 28rpx;
  color: var(--text-secondary, #999);
}