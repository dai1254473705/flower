/* pages/plant-detail/plant-detail.wxss */
.container {
  min-height: 100vh;
  background-color: var(--background);
}

/* 植物大图区域 */
.plant-image-section {
  position: relative;
  background: var(--card-background);
  overflow: hidden;
  box-shadow: var(--shadow-medium);
}

.plant-image {
  width: 100%;
  height: 550rpx;
  display: block;
  transition: transform 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
}

.plant-image:active {
  transform: scale(1.1);
}

.image-overlay {
  position: absolute;
  top: var(--spacing-sm);
  right: var(--spacing-sm);
  left: var(--spacing-sm);
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.collection-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: rgba(255,255,255,0.95);
  border-radius: 25rpx;
  padding: 15rpx;
  min-width: 90rpx;
  box-shadow: 0 4rpx 15rpx rgba(0,0,0,0.1);
  transition: all 0.3s ease;
}

.collection-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.15);
}

.collection-btn .icon {
  font-size: 42rpx;
  color: #ccc;
  margin-bottom: 5rpx;
  transition: color 0.3s ease;
}

.collection-btn .collected {
  color: var(--error-color);
  animation: heartBeat 0.6s ease;
}

.btn-text {
  font-size: 20rpx;
  color: var(--text-secondary);
  font-weight: 500;
}

/* 植物信息区域 */
.plant-info-section {
  padding: var(--spacing-sm);
}

.info-card {
  background: var(--card-background);
  border-radius: var(--border-radius-medium);
  padding: var(--spacing-md);
  box-shadow: var(--shadow-medium);
  margin-bottom: var(--spacing-sm);
}

.plant-title {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: var(--spacing-sm);
  line-height: 1.3;
}

.plant-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  gap: var(--spacing-xs);
}

.category {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
  color: white;
  padding: 10rpx 20rpx;
  border-radius: 25rpx;
  font-size: 24rpx;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(76, 175, 80, 0.3);
}

.plant-id {
  font-size: 24rpx;
  color: var(--text-light);
}

/* 相关文章区域 */
.articles-section {
  padding: var(--spacing-sm);
  margin-bottom: var(--spacing-sm);
}

.section-header {
  margin-bottom: var(--spacing-sm);
  display: flex;
  align-items: center;
}

.section-title {
  font-size: 28rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-left: 10rpx;
}

.section-header::before {
  content: '';
  display: inline-block;
  width: 8rpx;
  height: 28rpx;
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
  border-radius: 4rpx;
}

.articles-list {
  background: var(--card-background);
  border-radius: var(--border-radius-medium);
  overflow: hidden;
  box-shadow: var(--shadow-medium);
}

.article-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-md);
  border-bottom: 1rpx solid var(--border-color);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.article-item::after {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: rgba(76, 175, 80, 0.05);
  transition: left 0.3s ease;
}

.article-item:active::after {
  left: 0;
}

.article-item:last-child {
  border-bottom: none;
}

.article-title {
  flex: 1;
  font-size: 26rpx;
  color: var(--text-primary);
  line-height: 1.4;
}

.article-arrow {
  font-size: 36rpx;
  color: var(--text-light);
  margin-left: var(--spacing-sm);
  position: relative;
  z-index: 1;
}

/* 操作按钮区域 */
.action-section {
  padding: var(--spacing-md) var(--spacing-sm);
  display: flex;
  gap: var(--spacing-sm);
}

.action-btn {
  flex: 1;
  background: var(--card-background);
  border: 1rpx solid var(--border-color);
  border-radius: var(--border-radius-medium);
  padding: var(--spacing-sm);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 130rpx;
  transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
  box-shadow: var(--shadow-light);
}

.action-btn:active {
  transform: translateY(2rpx);
  box-shadow: var(--shadow-light);
}

.btn-icon {
  font-size: 40rpx;
  margin-bottom: var(--spacing-xs);
  transition: transform 0.3s ease;
}

.action-btn:active .btn-icon {
  transform: scale(0.9);
}

.action-btn text:last-child {
  font-size: 24rpx;
  color: var(--text-secondary);
  font-weight: 500;
}

.share-btn:active {
  background: rgba(76, 175, 80, 0.05);
}

.feedback-btn:active {
  background: rgba(255, 152, 0, 0.05);
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 250rpx var(--spacing-sm);
  color: var(--text-light);
  font-size: 28rpx;
}