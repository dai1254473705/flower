/* pages/plant-detail/plant-detail.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 植物大图区域 */
.plant-image-section {
  position: relative;
  background: white;
}

.plant-image {
  width: 100%;
  height: 500rpx;
  display: block;
}

.image-overlay {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}

.collection-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: rgba(255,255,255,0.9);
  border-radius: 20rpx;
  padding: 15rpx;
  min-width: 80rpx;
}

.collection-btn .icon {
  font-size: 36rpx;
  color: #ccc;
  margin-bottom: 5rpx;
}

.collection-btn .collected {
  color: #ff4757;
}

.btn-text {
  font-size: 20rpx;
  color: #666;
}

/* 植物信息区域 */
.plant-info-section {
  padding: 20rpx;
}

.info-card {
  background: white;
  border-radius: 15rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.plant-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.plant-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.category {
  background: #4CAF50;
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.plant-id {
  font-size: 24rpx;
  color: #999;
}

/* 相关文章区域 */
.articles-section {
  padding: 20rpx;
}

.section-header {
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.articles-list {
  background: white;
  border-radius: 15rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.article-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.article-item:last-child {
  border-bottom: none;
}

.article-title {
  flex: 1;
  font-size: 26rpx;
  color: #333;
}

.article-arrow {
  font-size: 32rpx;
  color: #999;
  margin-left: 20rpx;
}

/* 操作按钮区域 */
.action-section {
  padding: 30rpx 20rpx;
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  background: white;
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 120rpx;
}

.btn-icon {
  font-size: 32rpx;
  margin-bottom: 10rpx;
}

.action-btn text:last-child {
  font-size: 24rpx;
  color: #666;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 200rpx 20rpx;
  color: #999;
  font-size: 28rpx;
}