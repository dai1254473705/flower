/* pages/plant-detail/plant-detail.wxss */
.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background: var(--background, #ffffff);
}

/* 植物大图区域 */
.plant-image-section {
  position: relative;
  width: 100%;
  height: 600rpx;
  flex-shrink: 0;
  overflow: hidden;
  background: var(--card-background, #f5f5f5);
}

.plant-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.5s ease;
}

.plant-image:active {
  transform: scale(1.05);
}

.image-gradient {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 200rpx;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.4), transparent);
  pointer-events: none;
}

/* 收藏按钮 */
.collection-btn {
  position: absolute;
  bottom: 30rpx;
  right: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 999rpx;
  padding: 20rpx 28rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
  z-index: 10;
}

.collection-btn:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

.collection-icon {
  font-size: 48rpx;
  color: #ccc;
  line-height: 1;
  transition: all 0.3s ease;
}

.collection-icon.collected {
  color: var(--error-color, #f44336);
  animation: heartBeat 0.6s ease;
}

.collection-text {
  font-size: 24rpx;
  color: var(--text-primary, #333);
  font-weight: 500;
}

@keyframes heartBeat {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.2); }
}

/* 图片信息覆盖层 */
.image-info {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 40rpx 30rpx 30rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.plant-title {
  font-size: 52rpx;
  font-weight: 700;
  color: #ffffff;
  line-height: 1.3;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
  margin-bottom: 8rpx;
}

.plant-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  font-style: italic;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
  margin-bottom: 16rpx;
  display: block;
}

.category-tag {
  align-self: flex-start;
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(10rpx);
  padding: 12rpx 24rpx;
  border-radius: 999rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

.category-text {
  font-size: 26rpx;
  color: #ffffff;
  font-weight: 600;
}

/* Tab 切换 */
.tab-container {
  display: flex;
  background: var(--card-background, #ffffff);
  border-bottom: 1rpx solid var(--border-color, #f0f0f0);
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.tab-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 28rpx 0;
  position: relative;
  transition: all 0.3s ease;
}

.tab-item.active {
  color: var(--primary-color, #4CAF50);
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: var(--primary-color, #4CAF50);
  border-radius: 4rpx 4rpx 0 0;
}

.tab-text {
  font-size: 30rpx;
  font-weight: 500;
  color: var(--text-secondary, #666);
  transition: all 0.3s ease;
}

.tab-item.active .tab-text {
  color: var(--primary-color, #4CAF50);
  font-weight: 600;
}

.tab-badge {
  margin-left: 8rpx;
  background: var(--primary-color, #4CAF50);
  color: #ffffff;
  font-size: 20rpx;
  padding: 2rpx 10rpx;
  border-radius: 10rpx;
  line-height: 1.4;
}

.tab-item.active .tab-badge {
  background: var(--primary-color, #4CAF50);
}

/* 内容区域 */
.content-wrapper {
  padding-bottom: 30rpx;
}

/* 植物名称展示区域 */
.plant-name-section {
  background: var(--card-background, #ffffff);
  margin: 24rpx 30rpx 0;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid rgba(0, 0, 0, 0.04);
  text-align: center;
}

.plant-name-chinese {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: var(--text-primary, #333);
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.plant-name-english {
  display: block;
  font-size: 28rpx;
  color: var(--text-secondary, #666);
  font-style: italic;
  line-height: 1.5;
  font-weight: 400;
}

/* 信息区域 */
.info-section {
  background: var(--card-background, #ffffff);
  margin: 24rpx 30rpx;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid rgba(0, 0, 0, 0.04);
}

.section-content {
  padding-top: 8rpx;
}

/* 植物介绍 */
.intro-text {
  font-size: 28rpx;
  color: var(--text-primary, #333);
  line-height: 1.8;
  display: block;
}

/* 形态特征和养护要点列表 */
.feature-list,
.care-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.feature-item,
.care-item {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
}

.feature-bullet,
.care-bullet {
  color: var(--primary-color, #4CAF50);
  font-size: 28rpx;
  font-weight: bold;
  line-height: 1.5;
  flex-shrink: 0;
  margin-top: 4rpx;
  margin-right: 4rpx;
}

.feature-text,
.care-text {
  font-size: 28rpx;
  color: var(--text-primary, #333);
  line-height: 1.6;
  flex: 1;
}

/* 养护信息网格 */
.care-info-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-top: 8rpx;
}

.care-info-item {
  border-radius: 20rpx;
  padding: 28rpx 24rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.care-info-item:active {
  transform: scale(0.98);
}

/* 不同颜色的卡片 */
.care-info-item-1 {
  background: linear-gradient(135deg, #E8F5E9 0%, #C8E6C9 100%);
  border: 1rpx solid rgba(76, 175, 80, 0.2);
}

.care-info-item-2 {
  background: linear-gradient(135deg, #E3F2FD 0%, #BBDEFB 100%);
  border: 1rpx solid rgba(33, 150, 243, 0.2);
}

.care-info-item-3 {
  background: linear-gradient(135deg, #FFF3E0 0%, #FFE0B2 100%);
  border: 1rpx solid rgba(255, 152, 0, 0.2);
}

.care-info-item-4 {
  background: linear-gradient(135deg, #FFFDE7 0%, #FFF9C4 100%);
  border: 1rpx solid rgba(255, 235, 59, 0.3);
}

.care-info-label {
  font-size: 24rpx;
  color: var(--text-secondary, #666);
  font-weight: 500;
}

.care-info-value {
  font-size: 30rpx;
  color: var(--text-primary, #333);
  font-weight: 700;
  line-height: 1.4;
}

/* 文章列表区域 */
.articles-section {
  background: var(--background, #ffffff);
  padding: 24rpx 30rpx 30rpx;
  box-sizing: border-box;
}

.section-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
  padding: 0 8rpx;
}

.section-icon {
  font-size: 36rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: 700;
  color: var(--primary-color, #4CAF50);
  position: relative;
  padding-left: 16rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 28rpx;
  background: var(--primary-color, #4CAF50);
  border-radius: 3rpx;
}

/* 文章分组样式 */
.article-groups {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.article-group {
  background: var(--card-background, #ffffff);
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid rgba(0, 0, 0, 0.04);
}

.group-header {
  display: flex;
  align-items: center;
  padding: 24rpx 28rpx;
  background: linear-gradient(135deg, rgba(76, 175, 80, 0.08) 0%, rgba(76, 175, 80, 0.03) 100%);
  border-bottom: 1rpx solid var(--border-color, #f0f0f0);
}

.group-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.group-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-primary, #333);
  flex: 1;
}

.group-count {
  font-size: 24rpx;
  color: var(--text-secondary, #999);
  background: rgba(76, 175, 80, 0.1);
  padding: 6rpx 16rpx;
  border-radius: 999rpx;
}

.group-articles {
  display: flex;
  flex-direction: column;
}

.article-item {
  display: flex;
  align-items: center;
  padding: 24rpx 28rpx;
  border-bottom: 1rpx solid var(--border-color, #f0f0f0);
  transition: all 0.3s ease;
  position: relative;
}

.article-item:active {
  background: rgba(76, 175, 80, 0.05);
}

.article-item:last-child {
  border-bottom: none;
}

.article-cover {
  width: 140rpx;
  height: 140rpx;
  border-radius: 16rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
  background: #f5f5f5;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.article-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  min-width: 0;
  gap: 12rpx;
}

.article-title {
  font-size: 28rpx;
  color: var(--text-primary, #333);
  line-height: 1.5;
  font-weight: 500;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.article-meta {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: var(--text-secondary, #999);
  gap: 20rpx;
}

.article-time {
  color: var(--text-secondary, #999);
}

.article-read {
  color: var(--text-secondary, #999);
}

.article-arrow {
  font-size: 40rpx;
  color: var(--text-light, #ccc);
  margin-left: 16rpx;
  flex-shrink: 0;
  font-weight: 300;
}

/* 空状态 - 无相关文章 */
.empty-articles {
  text-align: center;
  padding: 120rpx 30rpx;
  margin: 0 30rpx 30rpx;
  background: var(--card-background, #ffffff);
  border-radius: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.empty-icon {
  display: block;
  font-size: 80rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-text {
  display: block;
  font-size: 28rpx;
  color: var(--text-secondary, #999);
}

/* 空状态 - 无简介内容 */
.empty-intro {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 30rpx;
  margin: 24rpx 30rpx;
  background: var(--card-background, #ffffff);
  border-radius: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  min-height: 400rpx;
}

.empty-intro-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.4;
  line-height: 1;
}

.empty-intro-text {
  font-size: 32rpx;
  color: var(--text-secondary, #999);
  font-weight: 500;
  margin-bottom: 16rpx;
}

.empty-intro-desc {
  font-size: 26rpx;
  color: var(--text-light, #ccc);
  line-height: 1.6;
}

/* 操作按钮区域 */
.action-section {
  padding: 30rpx;
  display: flex;
  gap: 20rpx;
  background: var(--background, #ffffff);
}

.action-btn {
  flex: 1;
  background: var(--card-background, #ffffff);
  border: 1rpx solid var(--border-color, #e5e5e5);
  border-radius: 20rpx;
  padding: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.action-btn:active {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.btn-icon {
  font-size: 44rpx;
  line-height: 1;
}

.btn-text {
  font-size: 26rpx;
  color: var(--text-primary, #333);
  font-weight: 500;
}

.share-btn:active {
  background: rgba(76, 175, 80, 0.08);
  border-color: var(--primary-color, #4CAF50);
}

.feedback-btn:active {
  background: rgba(255, 152, 0, 0.08);
  border-color: #ff9800;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 250rpx 30rpx;
}

.empty-loading {
  font-size: 28rpx;
  color: var(--text-secondary, #999);
}

/* 反馈按钮区域 */
.feedback-section {
  padding: 30rpx;
  background: var(--background, #ffffff);
  border-top: 1rpx solid var(--border-color, #f0f0f0);
}

.feedback-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, rgba(76, 175, 80, 0.08) 0%, rgba(76, 175, 80, 0.05) 100%);
  border: 1rpx solid rgba(76, 175, 80, 0.2);
  border-radius: 20rpx;
  transition: all 0.3s ease;
}

.feedback-btn:active {
  background: linear-gradient(135deg, rgba(76, 175, 80, 0.12) 0%, rgba(76, 175, 80, 0.08) 100%);
  transform: scale(0.98);
}

.feedback-button {
  width: 100%;
  padding: 0;
  margin: 0;
  background: transparent;
  border: none;
  border-radius: 20rpx;
  line-height: normal;
  font-size: inherit;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.feedback-button::after {
  border: none;
}

.feedback-icon {
  font-size: 32rpx;
}

.feedback-text {
  font-size: 28rpx;
  color: var(--primary-color, #4CAF50);
  font-weight: 500;
}